<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">



    <!-- Le linear layout suivant affiche la barre de menu en haut de l'écran-->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:background="#66ba59"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:text=" &lt; Accueil "
            android:layout_width="wrap_content"
            android:background="#66ba59"
            android:layout_height="wrap_content"
            android:onClick="vers_accueil"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:id="@+id/button4" />



        <TextView
            android:text="           Pharmacie à proximité "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#66ba59"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/textView2" />

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:background="#e4f4e9"
        android:layout_height="30dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/ma_localisation"
    android:text="Position actuelle :"
    />
    <ListView
        android:layout_width="wrap_content"
        android:id="@+id/resultats_geoloc"
        android:layout_height="450dp" />

</LinearLayout>

</ScrollView>