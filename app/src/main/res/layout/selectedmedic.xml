<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">



    <!-- Le linear layout suivant affiche la barre de menu en haut de l'écran-->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:background="#66ba59"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <Button
            android:text=" &lt; Accueil "
            android:layout_width="wrap_content"
            android:background="#66ba59"
            android:layout_height="wrap_content"
            android:onClick="vers_accueil"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:id="@+id/button4" />



        <TextView
            android:text="           Ma Pharmacie "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#66ba59"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:id="@+id/textView2" />

    </LinearLayout>


    <View
        android:layout_width="fill_parent"
        android:background="#e4f4e9"
        android:layout_height="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/selectedmedic"

        />

    <Button
        android:text="Supprimer ce médicament de ma pharmacie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="suppresion"
        android:id="@+id/supprimer" />

    <Button
        android:text="Obtenir des informations sur ce médicament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="information"
        android:id="@+id/info" />

    <Button
        android:text="Ajouter la date d'expiration sélectionnée"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="AjoutDate"
        android:id="@+id/peremption" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/dateperemption"

        />


    <DatePicker
        android:id="@+id/simpleDatePicker"
        android:layout_width="wrap_content"
        android:calendarViewShown="false"
        android:layout_height="100dp"
        android:calendarTextColor="@color/black" />




</LinearLayout>

</ScrollView>